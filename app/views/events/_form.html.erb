<% was_validated = event.errors.any? %>

<%= form_with(model: event, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% start_time_class = "form-control" %>
    <% start_time_was_invalid = event.errors.include?(:start_time) %>

    <% if was_validated %>
      <% if start_time_was_invalid %>
        <% start_time_class << " is-invalid" %>
      <% else %>
        <% start_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, class: start_time_class, placeholder: "Enter start time" %>
    <% if start_time_was_invalid %>
      <% event.errors.full_messages_for(:start_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% end_time_class = "form-control" %>
    <% end_time_was_invalid = event.errors.include?(:end_time) %>

    <% if was_validated %>
      <% if end_time_was_invalid %>
        <% end_time_class << " is-invalid" %>
      <% else %>
        <% end_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, class: end_time_class, placeholder: "Enter end time" %>
    <% if end_time_was_invalid %>
      <% event.errors.full_messages_for(:end_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = event.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% event.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% going_class = "form-control" %>
    <% going_was_invalid = event.errors.include?(:going) %>

    <% if was_validated %>
      <% if going_was_invalid %>
        <% going_class << " is-invalid" %>
      <% else %>
        <% going_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :going %>
    <%= f.number_field :going, class: going_class, placeholder: "Enter going" %>
    <% if going_was_invalid %>
      <% event.errors.full_messages_for(:going).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% interested_class = "form-control" %>
    <% interested_was_invalid = event.errors.include?(:interested) %>

    <% if was_validated %>
      <% if interested_was_invalid %>
        <% interested_class << " is-invalid" %>
      <% else %>
        <% interested_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :interested %>
    <%= f.number_field :interested, class: interested_class, placeholder: "Enter interested" %>
    <% if interested_was_invalid %>
      <% event.errors.full_messages_for(:interested).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% not_interested_class = "form-control" %>
    <% not_interested_was_invalid = event.errors.include?(:not_interested) %>

    <% if was_validated %>
      <% if not_interested_was_invalid %>
        <% not_interested_class << " is-invalid" %>
      <% else %>
        <% not_interested_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :not_interested %>
    <%= f.number_field :not_interested, class: not_interested_class, placeholder: "Enter not interested" %>
    <% if not_interested_was_invalid %>
      <% event.errors.full_messages_for(:not_interested).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% comment_class = "form-control" %>
    <% comment_was_invalid = event.errors.include?(:comment) %>

    <% if was_validated %>
      <% if comment_was_invalid %>
        <% comment_class << " is-invalid" %>
      <% else %>
        <% comment_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment_id %>
    <%= f.number_field :comment_id, class: comment_class, placeholder: "Enter comment" %>
    <% if comment_was_invalid %>
      <% event.errors.full_messages_for(:comment).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
