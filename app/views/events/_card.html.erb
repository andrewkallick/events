<div class="card mb-3">
  <h2 class="card-header h4">
    Event #<%= event.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Start time</dt>
      <!-- Display start_time start -->
      <dd><%= event.start_time %></dd>
      <!-- Display start_time end -->

      <dt>End time</dt>
      <!-- Display end_time start -->
      <dd><%= event.end_time %></dd>
      <!-- Display end_time end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= event.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Going</dt>
      <!-- Display going start -->
      <dd><%= event.going %></dd>
      <!-- Display going end -->

      <dt>Interested</dt>
      <!-- Display interested start -->
      <dd><%= event.interested %></dd>
      <!-- Display interested end -->

      <dt>Not interested</dt>
      <!-- Display not_interested start -->
      <dd><%= event.not_interested %></dd>
      <!-- Display not_interested end -->

      <dt>Comment</dt>
      <!-- Display comment_id start -->
      <dd><%= event.comment_id %></dd>
      <!-- Display comment_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back event, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link event start -->
      <div class="col">
        <%= link_to edit_event_url(event), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link event end -->

      <!-- Delete link event start -->
      <div class="col">
        <%= link_to event, method: :delete, data: { confirm: "Do you really want to delete this event?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link event end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(event.updated_at) %> ago
  </div>
</div>
